/* 头部 */
.top {
  position: absolute;
  top: 0px;
  width: 100%;
  height: 30px;
  text-align: center;
  background-color: #0080c0;
  border-radius: 5px;
  color: white;
  /* 文字垂直居中 */
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 导航图片 */
.imgShow{
  position: absolute;
  top: 6%;
  width: 100%;
}
.imgShow image{
  width: 100%;
  height: 153px;
}

.article{
  position: absolute;
  top: 36%;
  border: 1px #aaa solid;
  background-color: #aaa;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
