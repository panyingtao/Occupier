/* pages/layout/layout.wxss */

.container {
  display: flex;
  border: 1px blueviolet solid;
}

.item{
  width: 100%;
}

.head {
  display: flex;
  border: 1px black solid;
}
.title{
  width: 100%;
  height: 30px;
  text-align: center;
  background-color: #0080c0;
  border-radius: 5px;
  color: white;
  /* 文字垂直居中 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.navigation_img {
  display: flex;
  border: 1px rgb(3, 61, 112) solid;
}

.details {
  display: flex;
  border: 1px rgb(87, 90, 92) solid;
}

.features {
  display: flex;
  border: 1px rgb(201, 223, 241) solid;
}
